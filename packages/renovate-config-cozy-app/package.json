{
  "name": "renovate-config-cozy-app",
  "version": "0.3.1",
  "description": "Renovate config for Cozy Application (Cozy Cloud)",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "rangeStrategy": "pin",
      "packageRules": [
        {
          "excludePackageNames": [
            "^cozy-"
          ],
          "extends": [
            "schedule:nonOfficeHours"
          ]
        }
      ],
      "timezone": "Europe/Paris",
      "updateNotScheduled": false
    }
  },
  "license": "MIT"
}
